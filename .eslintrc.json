{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
        "object-curly-newline": ["off", {}],
        "operator-linebreak": "off"        
    }
}